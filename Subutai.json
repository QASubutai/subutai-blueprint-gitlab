{
    "name": "${environmentName}",
    "description": "GitLab",
    "version": "1.0.0",
    "author": "https://github.com/marcoarthur",
    "ssh-key": "mprado", 
    "containers": [
        {
            "hostname": "${webContainerName}",
            "template": "debian-stretch",
            "peer-criteria": "HTTP-GROUP",
            "size": "${containerSize}",
            "port-mapping": [
                {
                    "protocol": "http",
                    "domain": "${domainName}",
                    "internal-port": "80",
                    "external-port": "80"
                }
            ]
        }
    ],
    "peer-criteria": [
        {
            "name": "HTTP-GROUP",
            "max-price": "25"
        }
    ],
    "ansible-configuration": {
        "source-url": "https://github.com/marcoarthur/subutai-blueprint-gitlab/archive/master.zip",
        "ansible-playbook": "site.yml",
        "extra-vars": [
            {
                "key": "domain_name",
                "value": "${domainName}"
            },
            {
                "key": "smtp_server",
                "value": "${emailServer}"
            },
            {
                "key": "smtp_port",
                "value": "${emailServerPort}"
            },
            {
                "key": "smtp_user",
                "value": "${emailUser}"
            },
            {
                "key": "smtp_password",
                "value": "${emailPasswd}"
            },
            {
                "key": "smtp_domain_name",
                "value": "${smtpDomainName}"
            }
        ],
        "groups": [
            {
                "name": "gl",
                "hostnames": [
                    "${webContainerName}"
                ]
            }
        ]
    },
    "user-variables": {
        "environmentName": {
            "description": "Enter the environment name",
            "type": "string",
            "default": "nc",
            "validation": "[a-zA-Z0-9]+"
        },
        "domainName": {
            "description": "Enter the gitlab's domain name",
            "type": "domain",
            "default": "change.the.domain",
            "validation": "[a-zA-Z0-9]+"
        },
        "webContainerName": {
            "description": "Enter the container's hostname",
            "type": "string",
            "default": "nc",
            "validation": "[a-zA-Z0-9]+"
        },
        "containerSize": {
            "description": "Container Size",
            "type": "enum",
            "default": "MEDIUM",
            "validation": "MEDIUM,LARGE,HUGE"
        },
        "emailServer": {
            "description": "SMTP mail server, e.g., smtp.gmail.com",
            "type": "string",
            "default": "smtp.server",
            "validation": ".*"
        },
        "emailServerPort": {
            "description": "SMTP mail port",
            "type": "number",
            "default": "465",
            "validation": "[0-9]+"
        },
        "emailUser": {
            "description": "SMTP mail user, e.g., bob",
            "type": "string",
            "default": "smtp user",
            "validation": ".*"
        },
        "emailPasswd": {
            "description": "SMTP mail password",
            "type": "string",
            "default": "topsecret",
            "validation": ".*"
        },
        "smtpDomainName": {
            "description": "SMTP domain name, e.g., gmail.com",
            "type": "string",
            "default": "gmail.com",
            "validation": ".*"
        }
    }
}
